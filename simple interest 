//Registration No:CT101/G/22078/24
//Date:24/9/2024
//preprocessor  scanf( ), printf( )
#include <stdio.h>
int main( ) {
  float p, r ,t,si ;
 printf("Enter the principal:");
 scanf("%f",&p);
 //p=principal
 
 printf("Enter the rate:");
 scanf("%f",&r);
 //r=rate
 
 
 printf("Enter the time:");
 scanf("%f",&t);
 //t=time
 
 si=(p*r*t/100);
 printf("the simple intrest is %.2f" ,si);
 
 return 0;
 
 }
    
