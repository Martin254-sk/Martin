 printf("Enter customername:");
 scanf("%c",& customername);
 printf("Enter x:");
 scanf("%f",&x);
 printf("Enter y");
 scanf("%f",&y);
 //use if,else statements to check condition
 if(y<=199){x=1.20;}
 else if(y>=200&&y<400){x=1.5;}
 else if(y>=400&&y<600){x=1.80;}
 if (y>=600){x=2.00;}
 z=x*y;
 if(z<100) {z=100;}
else if(z>400){z=(z*1.15);}
printf("customerid %d\n", customerid);
printf("customername%c\n", customername);
printf("x%f\n",x);
printf("y%f\n",y);
